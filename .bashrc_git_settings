# git completion
if [ -f ~/.git-completion.bash ]; then
    source ~/.git-completion.bash
fi

# git prompt
if [ -f ~/.git-prompt.sh ]; then
    source ~/.git-prompt.sh
    export PS1='\[\033[92m\]\u@\h\[\033[97m\]:\[\033[33m\]\W$(__git_ps1 " \[\033[35m\](\[\033[37m\]%s\[\033[35m\])")\[\033[97m\]\$\[\033[0m\] '
fi
