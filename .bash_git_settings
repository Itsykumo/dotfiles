# git completion
if [ -f ~/.git-completion.bash ]; then
    source ~/.git-completion.bash
fi

# git prompt
if [ -f ~/.git-prompt.sh ]; then
    source ~/.git-prompt.sh
    export PS1='\[\033[0;37m\]\u\[\033[0;31m\]@\[\033[0;37m\]\h\[\033[0;31m\]:\[\033[0;33m\]\W$(__git_ps1 " \[\033[0;35m\](\[\033[1;34m\]%s\[\033[0;35m\])")\[\033[0;34m\]\$\[\033[0m\] '
fi
