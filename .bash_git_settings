# git completion
if [ -f ~/.git-completion.bash ]; then
    source ~/.git-completion.bash
fi

# git prompt
if [ -f ~/.git-prompt.sh ]; then
    source ~/.git-prompt.sh
    export PS1='\[\033[1;30m\]\u\[\033[0;30m\]@\[\033[1;30m\]\h\[\033[0;37m\]:\[\033[0;33m\]\W$(__git_ps1 " \[\033[0;35m\](\[\033[0;37m\]%s\[\033[0;35m\])")\[\033[0;37m\]\$\[\033[0m\] '
fi
